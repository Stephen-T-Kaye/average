{
    "collectCoverageFrom": [
        "src/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
        "/node_modules/",
        ".*\\.test\\.helper\\.js"
    ],
    "testPathIgnorePatterns" :[
        "/node_modules/",
        ".*\\.test\\.helper\\.js"
    ],
    "coverageDirectory": "<rootDir>/_pages/coverage",
    "coverageThreshold": {
        "global": {
            "statements": 100,
            "branches": 100,
            "functions": 100,
            "lines": 100
        }
    },
    "reporters": [
        "default",
        [
            "./node_modules/jest-html-reporter",
            {
                "pageTitle": "Test Report",
                "outputPath": "./_pages/tests/index.html"
            }
        ]
    ],
    "clearMocks": true
}